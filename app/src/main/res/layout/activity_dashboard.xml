<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".DashboardActivity">

    <!-- Header -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#3F51B5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="e-ASHA Dashboard"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview &amp; Statistics"
        android:textColor="#E0E0E0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvDashboardTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvDashboardTitle" />

    <!-- Stats Cards Grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDashboardTitle"
        android:layout_marginTop="32dp">

        <!-- Card 1: Total ASHAs -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvAshaCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total ASHAs"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2: Pending Claims -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPendingClaims"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Claims"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 3: Approved Amount (Full Width) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvApprovedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0.0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Approved Amount"
                    android:textSize="14sp"
                    android:textColor="#757575" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <!-- Quick Actions -->
    <TextView
        android:id="@+id/tvActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Actions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvActions">

        <Button
            android:id="@+id/btnManageAsha"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Manage ASHA Profiles"
            android:layout_marginBottom="12dp"
            app:icon="@android:drawable/ic_menu_myplaces"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp" />

        <Button
            android:id="@+id/btnEnterClaims"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Enter Monthly Claims"
            android:layout_marginBottom="12dp"
            app:icon="@android:drawable/ic_menu_edit"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp" />

        <Button
            android:id="@+id/btnClaimsHistory"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Claims History &amp; Correction"
            android:layout_marginBottom="12dp"
            app:icon="@android:drawable/ic_menu_recent_history"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/btnApproveClaims"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Approve Claims (Official)"
            app:icon="@android:drawable/ic_menu_agenda"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:backgroundTint="#FF5722" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
