<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to e-ASHA Claims"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnManageAsha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnManageAsha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage ASHA Profiles"
        app:layout_constraintBottom_toTopOf="@+id/btnEnterClaims"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnEnterClaims"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Monthly Claims"
        app:layout_constraintBottom_toTopOf="@+id/btnApproveClaims"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnManageAsha"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnApproveClaims"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approve Claims (Official)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnterClaims" />

</androidx.constraintlayout.widget.ConstraintLayout>
